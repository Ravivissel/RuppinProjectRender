  <goals>
    <goal>
      <description>רישום און-ליין לחוגים</description>
      <status>ניתן להירשם ישירות לחוגים מתוך האפליקציה, בתנאי שכמות הנרשמים לא עברה את המקסימום</status>
    </goal>
    <goal>
      <description>עידכון לגבי כל שינוי</description>
      <status>לאחר ההרשמה לחוג, הלקוח יקבל התראה למייל במידה ומשהו השתנה כגון שעה, מדריך, ביטול החוג</status>
    </goal>
    <goal>
      <description>הגדרת יעדים אישיים</description>
      <status>המשתמש יכול להגדיר יעדים אישיים ולעדכן אבני דרך עד שהוא מגיע ליעד!</status>
    </goal>
    <goal>
      <description>צפייה בתכנית אימונים</description>
      <status>המשתמש יכול לראות תכניות אימונים שנכתבו ע"י מדריכים מוסמכים בפורמה-קלאב</status>
    </goal>
  </goals>

  <modules>
    <module>
      <name>מסך הבית</name>
      <description>המסך מכיל טבלת שינויים אחרונים וגרף של החוגים הכי נבחרים לאותו החודש</description>
      <features>
        <feature>צפייה בנרשמים</feature>
        <feature>מנהל המערכת יכול לצפות בכל הלקוחות שנרשמו לחוגים על מנת לדעת כמה לקוחות רשומים לכל חוג</feature>
      </features>
    </module>
    <module>
      <name>ניהול משתמשים</name>
      <description>המודל מאפשר לרשום את משתמשי המערכת, לערוך את המשתמשים ולמחוק, ברגע שמשתמש חדש נוצר - נשלח אליו מייל עם שם המשתמש והססמא למערכת</description>
      <features>
        <feature>ניתן לשלוח מייל עם שם משתמש וססמא על פי דרישה</feature>
        <feature>הענקת רמות גישה לכל משתמש</feature>
      </features>
    </module>
    <module>
      <name>ניהול חוגים</name>
      <description>מודול המאפשר יצירת מופעים של חוגים חדשים, מדריכים חדשים וכמובן חוגים חדשים</description>
      <features>
        <feature>אפשרות קביעת מספר משתתפים מקסימלי לכל מופע של חוג</feature>
        <feature>אפשרות סימון "מופע חוזר לאותו חודש" - דבר המקל על יצירת חוגים בכל תחילת חודש</feature>
        <feature>עריכה של חוגים אחרי יצירתם - שינוי המדריך, שעה התחלה, שעת סיום ועוד. במידה ויש לקוחות הרשומים לחוג זה - הם יקבלו התראה בדואר אלקטרוני</feature>
      </features>
    </module>
    <module>
      <name>ניהול יעדים</name>
      <description>המודול מאפשר הוספה, שינוי עריכה ומחיקה של יעדים</description>
      <features>
        <feature>מחיקת יעדים</feature>
        <feature>שינוי יעדים</feature>
        <feature>הוספת יעד חדש</feature>
      </features>
    </module>
    <module>
      <name>ניהול הודעות ומשפטי מוטיבציה</name>
      <description>במודול זה ישנם שני תתי מודולים, ניהול הודעות כלליות של חדר הכושר וניהול פיצ'ר משפטי מוטיבציה</description>
      <features>
        <feature>ניתן לערוך את ההודעות של חדר הכושר באמצעות סיפריית סקריפט מיוחדת</feature>
        <feature>אפשרות מחיקה + מחיקה מרובה של הודעות</feature>
        <feature>אפשרות לקבוע כמה הודעות ירוצו בתחתית האפליקציה - מספר בין 1 ל 6 הודעות</feature>
      </features>
    </module>
  </modules>
