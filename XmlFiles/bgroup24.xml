  <shortDescription>
    אפליקציה שמטרתה לעודד משתמשים שונים לשתף נסיעות על מנת לחסוך כסף, זמן ודלק
  </shortDescription>
  <goals>
    <goal>
      <description>לחסוך למשתמשים כסף , זמן , דלק ועל הדרך לעודד סביבה ירוקה</description>
      <status>
        האפליקציה מאפשרת למשתמש לחפש נסיעות קרובות ליעד, שומרת יעדים מועדפים, מאפשרת למשמשים בנסיעה לשוחח ומציגה את מיקומם של המשתמשים במפה
      </status>
    </goal>
  </goals>
  <modules>
    <module>
      <name>מסך כניסה לאפליקציה</name>
      <description>
        מסך התחברות ע"י הזנת מייל וסיסמא, בנוסף ישנה אפשרות של שכחתי סיסמא
      </description>
      <features>
        <feature>שמירת נתוני התחברות</feature>
        <feature>
          אלגוריתם לשמירה ושליפת נתונים מתוך זכרון של הפלאפון האישי של המשתמש
        </feature>
      </features>
    </module>
    <module>
      <name>מסך מפה</name>
      <description>
        הצגת המיקום הנוכחי של המשתמש ושל משתמשים אחרים אשר מחוברים לאפליקציה
      </description>
      <features>
        <feature>
          שימוש בשירותי המפות של גוגל
        </feature>
        <feature>שליחת פוש כאשר משתמש מתחבר לאפליקציה </feature>
        <feature>הצגת המיקומים של משתמשים מחוברים אחרים</feature>
        <feature>שיתוף המיקום שלי עם משתמשים אחרים</feature>
      </features>
    </module>
    <module>
      <name>דף חיפוש נסיעות</name>
      <description>
        חיפוש נסיעה לפי רדיוס מוגדר מראש, שליפת המיקום הנוכחי מרכיב הניווט בפלאפון
      </description>
      <features>
        <feature>בחירת יעד מועדף מתוך רשימת היסטורית חיפושים</feature>
        <feature>השלמה אוטומטית של יעדים</feature>
        <feature>שליפת המיקום הנוכחי של המשתמש מרכיב הניווט של הפלאפון</feature>
      </features>
    </module>
    <module>
      <name>צ'אט קבוצתי</name>
      <description>נוסעי הנסיעה יכולים לשוחח ביניהם לשם קביעת מקום מפגש</description>
      <features>
        <feature>הודעת פוש אשר נשלחת לנוסע כאשר הוא מקבל הודעה מאחד הנוסעים</feature>
      </features>
    </module>
  </modules>
